@{
    Layout = null;
}
<form action="them" method="post">
    <div class="form-horizontal" style="margin:10px">
        <h2>Thêm nhân viên</h2>
        <div class="form-group">
            <label for="manv">Mã số nhân viên</label><br />
            <input name="manv" type="text" value="" maxlength="50" /><br /><br />
        </div>
        <div class="form-group">
            <label for="tennv">Tên nhân viên</label><br />
            <input name="tennv" type="text" value="" maxlength="50" /><br /><br />
        </div>
        <div class="form-group">
            <label for="ngaysinh">Ngày sinh</label><br />
            <input name="ngaysinh" type="date" value="" maxlength="50" /><br /><br />
        </div>
        <div class="form-group">
            <label for="phai">Phái</label><br />
            <select name="phai">
                <option value=false>Nữ</option>
                <option value=true>Nam</option>
            </select><br /><br />
        </div>
        <div class="form-group">
            <label for="diachi">Địa chỉ</label><br />
            <input name="diachi" type="text" value="" maxlength="50" /><br /><br />
        </div>
        <div class="form-group">
            <input onclick="check" style="text-decoration:none ;padding: 7px; color:white; background-color:dodgerblue; border-radius:10%" type="submit" value="Thêm" /><br /><br />
        </div>
    </div>
</form>
