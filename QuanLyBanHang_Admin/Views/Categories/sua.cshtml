@using QuanLyBanHang_Admin.Models;
@model Loaihanghoa;
@{
    Layout = null;
}
<form action="sua" method="post">
    <div class="form-horizontal">
        <h2>Sửa thông tin nhà sản xuất</h2>
        @{
            Loaihanghoa n = ViewBag.category;
        }
        <div class="form-group">
            @*name trùng với tên field được binding*@
            <input name="maloai" readonly value=@n.Maloai maxlength="50" /><br />
        </div>
        <div class="form-group">
            <b>Tên nhà sản xuất</b><br />
            <input name="tenloai" type="text" value=@n.Tenloai maxlength="50" /><br />
        </div>
        <br />
        <div class="form-group">
            <input type="submit" value="Lưu" />
        </div>
        <br />
        <div>
            <a href="@Url.Action("Index")">Quay lại</a>
        </div>
    </div>
</form>